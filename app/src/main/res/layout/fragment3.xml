<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/fg3_top"
        android:src="@drawable/jianbian"
        android:scaleType="fitXY"
        android:layout_width="1080px"
        android:layout_height="520px" />

    <ImageView
        android:id="@+id/fg3_tou"
        android:layout_marginLeft="390px"
        android:layout_marginTop="80px"
        android:src="@mipmap/tou"
        android:scaleType="fitXY"
        android:layout_width="300px"
        android:layout_height="300px" />

    <ImageView
        android:id="@+id/fg3_news"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50px"
        android:layout_marginRight="50px"
        android:src="@mipmap/news"
        android:scaleType="fitXY"
        android:layout_width="80px"
        android:layout_height="80px" />

    <TextView
        android:layout_below="@+id/fg3_tou"
        android:id="@+id/fg3_name"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:text="用户名"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/fg3_go"
        android:layout_below="@+id/fg3_tou"
        android:layout_marginRight="50px"
        android:layout_alignParentRight="true"
        android:src="@mipmap/go"
        android:layout_width="80px"
        android:layout_height="80px" />


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_below="@+id/fg3_top"
        android:layout_width="1080px"
        android:layout_height="250px">
        
        <TextView
            android:id="@+id/fg3_money"
            android:background="@drawable/shape_fg_bg"
            android:text="00.00"
            android:layout_width="358px"
            android:layout_height="250px" />

        <TextView
            android:layout_toRightOf="@id/fg3_money"
            android:id="@+id/fg3_dingdan"
            android:background="@drawable/shape_fg_bg"
            android:text="00.00"
            android:layout_width="358px"
            android:layout_height="250px" />

        <TextView
            android:background="#ffffff"
            android:layout_toRightOf="@id/fg3_dingdan"
            android:id="@+id/fg3_newsss"
            android:text="00.00"
            android:layout_width="358px"
            android:layout_height="250px" />

        
    </RelativeLayout>






</RelativeLayout>